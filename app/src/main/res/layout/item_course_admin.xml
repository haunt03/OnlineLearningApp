<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/card_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_course_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="Course Image"
        android:scaleType="centerCrop"
        android:src="@drawable/imgvector2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_course_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@id/iv_eye"
        app:layout_constraintStart_toEndOf="@id/iv_course_image"
        app:layout_constraintTop_toTopOf="@id/iv_course_image" />

    <TextView
        android:id="@+id/tv_course_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintEnd_toEndOf="@id/tv_course_title"
        app:layout_constraintStart_toStartOf="@id/tv_course_title"
        app:layout_constraintTop_toBottomOf="@id/tv_course_title" />

    <ImageView
        android:id="@+id/iv_eye"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="View Course"
        android:src="@android:drawable/ic_menu_view"
        app:layout_constraintEnd_toStartOf="@id/iv_delete"
        app:layout_constraintTop_toTopOf="@id/tv_course_title" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Delete Course"
        android:src="@android:drawable/ic_menu_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_eye" />

</androidx.constraintlayout.widget.ConstraintLayout>