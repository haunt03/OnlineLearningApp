<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when item is currently selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_current_question" /> <!-- Màu xanh cho câu hỏi hiện tại -->
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/purple_500" />
        </shape>
    </item>
    <!-- State when item is answered -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/green_answered" /> <!-- Màu xanh lá nhạt cho câu hỏi đã trả lời -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Default state (not selected, not answered) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_gray_unanswered" /> <!-- Màu xám nhạt cho câu hỏi chưa trả lời -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@android:color/darker_gray" />
        </shape>
    </item>
</selector>